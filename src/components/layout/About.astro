---
import Button from '@/components/UI/Button.astro';

interface Props {
  profileImage?: string;
  gifImage?: string;
}

const {
  profileImage = 'images/logo/insdash_dark.png',
  gifImage = 'images/logo/insdash_w.png',
} = Astro.props;

const baseUrl = import.meta.env.BASE_URL;

const profileImagePath = `${baseUrl}${profileImage}`;
const gifImagePath = `${baseUrl}${gifImage}`;
---

<section class="aboutMe">
  <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 items-start">
    <!-- Text section -->
    <div class="lg:col-span-9 space-y-6">
      <p class="uppercase text-sm tracking-widest text-gray-500">
        SINCE I’VE GOT YOUR ATTENTION
      </p>
      <h3>Let’s talk about insdash</h3>

      <p>
        Insdash was created to turn complex ideas into clear, interactive experiences and system. With roots in architecture, computational design, and software development, we focus on designing <strong>scalable systems and immersive prototypes</strong> that help people engage with technology more meaningfully.
      </p>
    </div>

    <!-- Images section -->
    <div class="lg:col-span-3 flex flex-col items-center gap-4">
      <div class="static_image group">
        <!-- static profile image -->
        <img
          src={profileImagePath}
          alt="Profile Picture"
          class="profile_image group-hover:opacity-0"
        />

        <!-- GIF image -->
        <img
          src={gifImagePath}
          alt="Animated GIF"
          class="profile_image absolute top-0 left-0 opacity-0 transition-opacity duration-500 group-hover:opacity-100"
        />
      </div>
    </div>

    <!-- Additional Button -->
    <!-- <div class="lg:col-span-12 space-y-4">
      <div class="flex justify-end">
        <Button
          href={`${baseUrl}about`}
          label="More about me"
          color="primary"
          variant="outline"
          size="md"
        />
      </div>
      <div class="flex justify-end">
        <Button
          href={`${baseUrl}resume`}
          label="Work experiences & Resume"
          color="primary"
          variant="outline"
          size="md"
        />
      </div>
    </div> -->
    
  </div>
</section>

<style>
  @reference "@/styles/global.css";
  .aboutMe {
    @apply px-[2.5rem] my-[4rem] mx-auto max-w-[80rem];
  }

  .static_image {
    @apply relative w-72 h-72;
  }

  .profile_image {
    @apply w-full h-full rounded-full transition-opacity duration-500;
  }

  .showgif {
    @apply hidden;
  }
</style>
