---
import Layout from '@/layouts/Layout.astro';
import Intro from '@/components/layout/Intro.astro';
import Square from '@/components/grids/Square.astro';
import About from '@/components/layout/About.astro';
---

<Layout
  title="Homepage"
  description="Insdash  loves creating functional yet fun interactions to humanize technology!"
  image="./images/logo/insdash_dark.png"
  keywords="Insdash , software engineer, product designer, developer, interaction">
  <div class="my-[12rem]">
    <Intro />
  </div>

  <Square />

  <div class="text-center my-[12rem] text-[var(--color-text-hover)]">
    <h3>
      The website is currently being updated, and more projects are on the way.
    </h3>
    <h3>
      In the meantime, you can check out <a
        href="https://yingshiuan.github.io/yingsc/"
        class="underline text-[var(--color-text-hover)">
        Ying's website
      </a>!
    </h3>
  </div>

  <About />
</Layout>
